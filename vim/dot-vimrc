nnoremap <C-L><C-L> :set number!<CR>:set relativenumber!<CR>

command -bar Hexmode call ToggleHex()
let jshint2_command='/usr/bin/jshint'

function ToggleHex()
    let l:modified=&mod
    let l:oldreadonly=&readonly
    let &readonly=0
    let l:oldmodifiable=&modifiable
    let &modifiable=1
    if !exists("b:editHex") || !b:editHex
        let b:oldft=&ft
        let b:oldbin=&bin
        setlocal binary
        silent :e

        let &ft="xxd"
        let b:editHex=1
        %!xxd
    else
        let &ft=b:oldft
        if !b:oldbin
            setlocal nobinary
        endif
        let b:editHex=0
        %!xxd -r
    endif
    let &mod=l:modified
    let &modifiable=l:oldmodifiable
endfunction

